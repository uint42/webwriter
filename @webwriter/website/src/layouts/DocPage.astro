    }

    article p:nth-child(2) {
        border: 2px solid var(--sl-color-gray-950);
        margin: 1rem;
        box-sizing: border-box;
        padding: 0.5rem;
        padding-left: 1rem;
        margin-left: 0;
        background: white;
    }

    article pre {
        padding: 1rem;
        overflow-x: auto !important;
        width: 100%;
        box-sizing: border-box;
    }

