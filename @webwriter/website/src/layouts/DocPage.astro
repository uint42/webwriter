    }

    .doc-article img {
      margin: auto;
      display: block;
      width: 100%;
      height: auto;
      aspect-ratio: auto;
      background: var(--background-color);
    }

    article {
        padding-left: 3rem;
        padding-right: 2rem;
        padding-bottom: 2.5rem;
        box-sizing: border-box;
        z-index: 0;
        flex-basis: 700px;
        flex-grow: 1;
        flex-shrink: 1;
